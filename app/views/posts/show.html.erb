Post Title: <%= @post.title %>
Content: <%= @post.content %>
Categories: 
<% @post.categories.each do |category| %>
    <%= category.name %>
<% end %>
Users: 
<% unique_users = @post.users.uniq %>
<% unique_users.each do |user| %>
    <%= link_to user.username, user_path(user) %>
<% end %>
Comments: 
<% @post.comments.each do |comment| %>
    <%= comment.user.username %> says: <%= comment.content %>
<% end %>

Add an additional comment: 
<%= form_for @new_comment do |f| %>
    <%= f.hidden_field :post_id, value: @post.id %> 
    <%= f.label "Select User" %>
    <%= f.select :user_id, User.all.collect { |u| [u.username, u.id ] }, include_blank: true %>
    <%= f.label "Create New User" %>
    <%= f.fields_for :user_attributes, User.new do |user_fields| %>
        <%= user_fields.text_field :username, :id=>:comment_user_attributes_username %>
    <% end %>
    <%= f.label "Content" %>
    <%= f.text_area :content %>
    <%= f.submit %>
<% end %>



